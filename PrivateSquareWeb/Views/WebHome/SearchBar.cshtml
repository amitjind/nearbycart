<script>
    var ActivatePageNumber = function (id) {
        var localstorageid = localStorage.getItem("PageNumber");
        if (localstorageid == 0) {
            localStorage.setItem("PageNumber", 1);
            $(".active").removeClass("active");
            $("#1").addClass("active");
            return true;
        }
        else {
            $(".active").removeClass("active");
            $("#" + id + "").addClass("active");
            return true;
        }
    }
</script>
