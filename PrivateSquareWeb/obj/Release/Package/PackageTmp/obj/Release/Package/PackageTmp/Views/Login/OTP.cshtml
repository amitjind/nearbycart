    <script type="text/javascript">
        function ResendOtp() {
            var Mobile = '@Session["Mobile"]';
            $.ajax({
                url: "../../Login/GetOtp",
                type: "POST",
                data: {
                    Mobile: Mobile

                },
                success: function (result) {
                    var resp = JSON.parse(result);
                    if (resp[0].Response) {
                       // document.getElementById("LblOtp").innerText = resp[0].Response;
                        document.getElementById("OTPMessage").innerText = resp[0].Response;
                       
                    }
                }
            });
        }
    </script>
